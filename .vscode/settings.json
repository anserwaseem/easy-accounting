{
  "files.associations": {
    ".eslintrc": "jsonc",
    ".prettierrc": "jsonc",
    ".eslintignore": "ignore",
    "*.css": "tailwindcss"
  },

  "javascript.validate.enable": false,
  "javascript.format.enable": false,
  "typescript.format.enable": false,

  "search.exclude": {
    ".git": true,
    ".eslintcache": true,
    ".erb/dll": true,
    "release/{build,app/dist}": true,
    "node_modules": true,
    "npm-debug.log.*": true,
    "test/**/__snapshots__": true,
    "package-lock.json": true,
    "*.{css,sass,scss}.d.ts": true
  },

  "todo-tree.highlights.customHighlight": {
    "LOGIC": {
      "foreground": "#000",
      "background": "#2B6DD5",
      "iconColour": "#2B6DD5",
      "icon": "squirrel"
    },
    "ASK": {
      "foreground": "#d6b8b8",
      "background": "#815400",
      "iconColour": "#FFA500",
      "icon": "question"
    },
    "FUTURE": {
      "foreground": "#000",
      "background": "#322307",
      "iconColour": "#000",
      "icon": "clock"
    }
  }
}
